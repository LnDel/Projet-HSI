# Folders
srcdir = ./src/
bindir = ./bin/
libdir = ./lib/

# Commands
CC = gcc -Wall
AR = ar rcs
RM = rm -f

# Specific files
SRC = $(wildcard $(srcdir)*.c)
OBJ = $(patsubst $(srcdir)%.c, $(bindir)%.o, $(SRC))
LIB = $(libdir)*.a

# target
all: script $(LIB)

# Run the script
script:
	python3 ./script_generation.py

# Creation static library
$(LIB): $(OBJ)
	$(AR) $@ $^

# Creation object files
$(bindir)%.o: $(srcdir)%.c
	$(CC) -c $< -o $@

clean:
	$(RM) $(OBJ) $(LIB)

.PHONY: all clean